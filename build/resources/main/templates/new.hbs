{{#partial "title"}}SparkBlog: New Post{{/partial}}

{{#partial "container-content"}}
    <div class="new-entry">
        <h2>Publish New Entry</h2>
        <form action="/new" method="post">
            <label for="title"> Title</label>
            <input type="text" name="title"><br>
            <label for="entry">Entry</label>
            <textarea rows="5" name="entry"></textarea>
            <input type="submit" value="Publish Entry" class="button" formnovalidate>
            <a href="/" class="button button-secondary">Cancel</a>
        </form>
    </div>{{/partial}}

{{> base.hbs}}